License           : GPL3
"""

import os, argparse

os.environ["GDK_BACKEND"] = "wayland"
from vx_library import init_vxm

if __name__ == "__main__":
    parser = argparse.ArgumentParser(
        description=f"""
        Vixen Manager.
    """
    )

    parser.add_argument(
        "--setup", type=str, choices=["update", "remove"], help="Vixen Shell setup."
    )
    parser.add_argument(
        "--shell", type=str, choices=["open", "close"], help="Vixen Shell controls."
    )
    parser.add_argument(
        "--dev", action="store_true", help="Run feature development mode."
    )

    args = parser.parse_args()

    if args.setup:
        if args.setup == "remove":
            init_vxm().remove()

    if args.shell:
        if args.shell == "open":
            init_vxm().shell_open()

        if args.shell == "close":
            init_vxm().shell_close()

    if args.dev:
        init_vxm().dev_mode(os.getcwd())
